{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/bins/list",
      "methods": ["GET"],
      "dest": "index.js"
    },
    {
      "src": "/api/bins/add",
      "methods": ["POST"],
      "dest": "index.js"
    },
    {
      "src": "/api/bins/verify",
      "methods": ["POST"],
      "dest": "index.js"
    },
    {
      "src": "/api/tutorials/list",
      "methods": ["GET"],
      "dest": "index.js"
    },
    {
      "src": "/api/community/stats",
      "methods": ["GET"],
      "dest": "index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/bins(\\.html)?",
      "dest": "/public/pages/bins.html"
    },
    {
      "src": "/tutorials(\\.html)?",
      "dest": "/public/pages/tutorials.html"
    },
    {
      "src": "/community(\\.html)?",
      "dest": "/public/pages/community.html"
    },
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
